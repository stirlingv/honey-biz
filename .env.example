# Bear Creek Apiaries - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Django Settings
# =============================================================================
# Generate a new secret key for production: 
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Set to False in production!
DEBUG=True

# Add your domain in production (e.g., bearcreekapiaries.com,www.bearcreekapiaries.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# QuickBooks Integration
# =============================================================================
# Get these from https://developer.intuit.com
QUICKBOOKS_CLIENT_ID=your-client-id
QUICKBOOKS_CLIENT_SECRET=your-client-secret

# Update this to your production URL when deploying
QUICKBOOKS_REDIRECT_URI=http://localhost:8000/quickbooks/callback/

# Change to 'production' when ready to go live
QUICKBOOKS_ENVIRONMENT=sandbox

# Company ID is shown after connecting to QuickBooks
QUICKBOOKS_COMPANY_ID=

# =============================================================================
# Production Deployment Checklist
# =============================================================================
# Before going live, ensure:
# [ ] DEBUG=False
# [ ] New DJANGO_SECRET_KEY generated
# [ ] ALLOWED_HOSTS set to your domain
# [ ] QUICKBOOKS_ENVIRONMENT=production
# [ ] QUICKBOOKS_REDIRECT_URI updated to https://yourdomain.com/quickbooks/callback/
# [ ] SSL/HTTPS enabled on your hosting provider
# [ ] Database backups configured
